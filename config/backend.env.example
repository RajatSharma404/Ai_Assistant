# YourDaddy Assistant Backend Configuration
# Copy this to .env and customize your settings

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Backend operation mode (simple, enhanced, full)
# simple: Basic functionality only
# enhanced: Full conversational AI with automation
# full: All features including multimodal and advanced AI
BACKEND_MODE=enhanced

# Server settings
HOST=0.0.0.0
PORT=5000
DEBUG=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable specific features
ENABLE_AUTH=true
ENABLE_RATE_LIMITING=true
ENABLE_MULTIMODAL=true
ENABLE_MULTILINGUAL=true
ENABLE_VOICE=true
ENABLE_AUTOMATION=true
ENABLE_LOGGING=true

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# JWT secret key for authentication (generate a secure random key)
JWT_SECRET_KEY=your-secure-jwt-secret-key-here

# Admin password for web interface
ADMIN_PASSWORD=changeme123

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000,http://127.0.0.1:3000,http://127.0.0.1:5000

# =============================================================================
# EXTERNAL API KEYS (Optional)
# =============================================================================

# OpenAI API key for enhanced AI features
OPENAI_API_KEY=your-openai-api-key

# Google API key for translation and other services
GOOGLE_API_KEY=your-google-api-key

# Weather API key
WEATHER_API_KEY=your-weather-api-key

# News API key
NEWS_API_KEY=your-news-api-key

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Browser auto-open (set to false to disable)
NO_BROWSER=false

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Database URL (for future use)
DATABASE_URL=sqlite:///yourdaddy.db